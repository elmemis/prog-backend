extends layouts/index.pug

block body
  table(class="table table-striped table-hover ")
    thead
      tr
        th(scope="col") #
        th(scope="col") Title
        th(scope="col") Price
        th(scope="col")
    tbody
      each producto in productos
        tr
          th(scope="row")=producto.id
          td=producto.title
          td=producto.price
          td
            img(src="static/img/" + producto.thumbnail width="40px" height="40px")
      else
        p No hay productos cargados.

  div(align="center")
    p
      a(href="/") Inicio