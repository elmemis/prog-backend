<!DOCTYPE html>
<html>
    <%- include('layouts/partials/header.ejs') %>
    <body>
        <div class="container">
            <h1>Bienvenidos</h1>
            <div id="app">

                <% if (productos.length > 0) { %>
                <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach(function(movie) { %>
                    <tr>
                    <th scope="row"><%= movie.id %></th>
                    <td><%= movie.id %></td>
                    <td><%= movie.price %></td>
                    <td><img src="static/img/<%= movie.thumbnail %>"  width="40px" height="40px"></img></td>
                    </tr>
                    <% }); %>
                </tbody>
                </table>
                <%} else { %>
                <p>No hay productos cargados.</p>
                {<% } %>
                <div align="center">
                    <p><a href="/">Inicio</a></p>
                </div>
            </div>
        </div>
    </body>
</html>