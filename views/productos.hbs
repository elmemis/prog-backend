{{#if productos}}
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col"></th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each productos}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.title}}</td>
      <td>{{this.price}}</td>
      <td><img src="static/img/{{this.thumbnail}}" width="40px" height="40px"></img></td>
      <td align="center"><img src="static/img/close.png" width="10px" height="10px" onclick="deleteProduct({{this.id}})" alt="Eliminar producto"></img></td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>No hay productos cargados.</p>
{{/if}}